<div class="col s12 m7">
   <h2 class="header"> <%= @product.name %> </h2>
   <div class="card horizontal">
     <div class="card-image">
       <img src=" <%= @product.img %> ">
     </div>
     <div class="card-stacked">
       <div class="card-content">
         <p>Cost:  $<%= @product.cost %> </p>
         <p>Country of Origin: <%= @product.origin %> </p>
       </div>
       <div class="card-action">
         <%= link_to "Home", products_path %>
         <%= link_to "Add Review", new_product_review_path(@product) %>
         <%= link_to "Edit", edit_product_path(@product) %>
         <%= link_to "Delete", product_path(@product),
         :data => {:confirm => "Are you sure?",
           :method => "delete"} %>
       </div>
     </div>
   </div>
</div>

<% @product.reviews.each do |review| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Review</span>
          <p> <%= review.review %> </p>
          <p> By: <%= review.author %> </p>
        </div>
        <div class="card-action">
          <%= link_to "Delete",  product_review_path(@product, review),
                      :data => {:confirm => "Delete Review?",
                                :method => "delete"} %>
        </div>
      </div>
    </div>
  </div>



<% end %>
