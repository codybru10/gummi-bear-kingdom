    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo">Gummi Bear Kingdom</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="#">Login</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%= flash[:notice] %>
      <%= flash[:alert] %>

      <%= yield %>
    </div>
  </body>
</html>
